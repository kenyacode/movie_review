<div id="page_wrapper"

	<h1>Sign Up</h1>

				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>

			<div class="fields">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, input_html: { class: 'form-control' } %>
			</div>
			<br>
			<div class="fields">
				<%= f.label :password %>
				<% if @minimum_password_length %>
				<em>(<%= @minimum_password_length %> characters minimum)</em>
				<% end %><br />
				<%= f.password_field :password, autocomplete: "off", input_html: { class: 'form-control' } %>
			</div>
			<br>
			<div class="fields">
				<%= f.label :password_confirmation %><br />
				<%= f.password_field :password_confirmation, autocomplete: "off", input_html: { class: 'form-control' } %>
			</div>
			<br>
			<div class="actions">
				<%= f.submit "Sign up", class: "btn btn-primary" %>
			</div>
			<br>
			<% end %>

			<%= render "devise/shared/links" %>
</div>
