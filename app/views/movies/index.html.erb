<% if !user_signed_in? %>
	<div class="jumbotron">
		<h1>Your Favorite Movies Reviewed</h1>
		<p>Review your favorite movies.</p>
		<p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-danger btn-lg" %></p>
	</div>
<% end %>

<div class="row">
	<% @movies.each do |movie| %>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail">
				<%= link_to (image_tag movie.image.url(:poster)), movie %>
			</div>
		</div>
	<% end %>
</div>
